    "strict": true,
    "allowImportingTsExtensions": false,
    "outDir": "./dist",
    "typeRoots": [
      "./node_modules/@types",
      "./@types"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "node_modules/@prisma/client"
  ]
}
